{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-trailing-spaces": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "quotes": ["warn", "single"],
        "semi": ["error", "always"],
        "constructor-super": "warn",
        "valid-typeof": "warn"
    },

    "globals": {
        "jQuery": true,
        "$": true
    }
}